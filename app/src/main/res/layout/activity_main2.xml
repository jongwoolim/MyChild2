<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.Main2Activity">

    <LinearLayout
        android:background="@color/bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="130dp">

        <ImageView
            android:src="@drawable/ch"
            android:layout_marginLeft="20dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <TextView
            android:id="@+id/tv_child_info"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/main2textview_style"
            android:textSize="25sp"
            android:text="새싹반 신짱구 2020.1.28 통계표"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>

    <LinearLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_estimate"
                android:textSize="20sp"
                android:text="평가"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="170dp"
                android:layout_toRightOf="@id/tv_estimate"
                android:textSize="20sp"
                android:text="오늘의 수업 일정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_today_class"
                android:layout_marginTop="10dp"
                android:background="@drawable/main2textview_style"
                android:layout_width="170dp"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/tv_test"
                android:layout_toRightOf="@id/tv_today_class"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/main2textview_style"
                android:layout_width="170dp"
                android:layout_height="130dp"/>

            <Button
                android:id="@+id/btn_comment"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_style"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_test"
                android:text="선생님 코멘트 보러 가기"
                android:layout_width="120dp"
                android:layout_height="130dp"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>