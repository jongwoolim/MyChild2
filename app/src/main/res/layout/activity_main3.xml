<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.Main3Activity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ch"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/main3_tv_name"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신짱구 어린이"
            android:textSize="15sp"/>

        <RelativeLayout
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_age"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/main3_tv_age"
                android:padding="5dp"
                android:background="@drawable/main3textview_style"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/tv_age"
                android:layout_width="200dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="6dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ban"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반 이름"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/main3_tv_class"
                android:padding="5dp"
                android:background="@drawable/main3textview_style"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/tv_ban"
                android:textSize="15sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#B2CCFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선생님 코멘트"
        android:textSize="18sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/main3_tv_comment"
            android:padding="16dp"
            android:textStyle="bold"
            android:background="@drawable/main3textview_style2"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#B2CCFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱 설정 및 정보"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="알림 설정"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="버전 정보"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="문의 하기"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="공지 사항"/>

</LinearLayout>


</LinearLayout>