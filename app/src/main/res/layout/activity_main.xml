<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 아이 찾기"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />




    </LinearLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <TextView
            android:id="@+id/tv_care_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="어린이집"
            android:textSize="25sp"/>


        <TextView
        android:id="@+id/tv__care_center"
        android:layout_below="@id/tv_care_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="어린이집"
        android:layout_marginBottom="6dp"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv__care_center_addr"
            android:layout_below="@id/tv__care_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="13sp"/>

        <ImageButton
            android:id="@+id/search_care_center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_care_center"
            android:background="@drawable/button_style2"
            app:srcCompat="@android:drawable/ic_input_add"/>

    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/tv_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="반 이름"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv__class"
            android:layout_below="@id/tv_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="반 이름"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/search_class"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_ban"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button_style2"
            app:srcCompat="@android:drawable/ic_input_add"/>


    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="이름"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv__name"
            android:layout_below="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/search_child"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button_style2"
            app:srcCompat="@android:drawable/ic_input_add"/>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_barchart"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="차트 보러가기"
        android:textSize="23sp"/>


</LinearLayout>